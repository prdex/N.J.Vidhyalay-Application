                android:layout_height="match_parent"
                android:background="#DCD6D6"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textViewnoticeboard"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="@string/attendence"
                    android:textSize="@dimen/_15sdp" />

                <ImageView
                    android:id="@+id/imageViewnoticeboard"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:srcCompat="@drawable/attendenceicon"
                    android:contentDescription="@string/image_name" />
            </LinearLayout>

        </androidx.cardview.widget.CardView>

